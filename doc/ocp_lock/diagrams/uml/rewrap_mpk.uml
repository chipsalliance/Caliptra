'
' OCP Lock: REWRAP_MPK API sequence diagram showing Caliptra FW/HW interactions
'
'
@startuml

!include utils.inc

note across
    <b>Preconditions:</b>
        * The HEK is present in a KV slot
end note

' Pre-existing state
$activate(hek)
$activate(hpke)

dfw -> cfw++ : REWRAP_MPK

$preconditioned_key_extract(HEK, hek, SEK, cfw, EPK, epk)

$hpke_unwrap(kv_ak, kv_ak2)

$preconditioned_key_extract(Current access key, kv_ak, EPK, epk, current-access-key Locked MPK Encryption Secret, encryption_secret)

$zeroize(kv_ak)

$preconditioned_key_extract(New access key, kv_ak2, EPK, epk, new-access-key Locked MPK Encryption Secret, encryption_secret2)

$zeroize(epk)
$zeroize(kv_ak2)

$preconditioned_aes_decrypt(encryption_secret, encryption_key, MPK bound to current access key, mpk)

$preconditioned_aes_encrypt(encryption_secret2, encryption_key2, MPK bound to new access key, mpk)

cfw -> dfw: Command response\nand Rewrapped MPK
cfw--

@enduml
